{
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "swagger": "2.0",
  "info": {
    "description": "Perceptor core REST API",
    "title": "Perceptor API.",
    "termsOfService": "https://www.blackducksoftware.com/",
    "contact": {
      "name": "Black Duck Software",
